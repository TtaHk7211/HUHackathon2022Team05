<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvShowRequest"
        android:layout_width="305dp"
        android:layout_height="208dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="53dp"
        android:background="#8BC34A"
        android:text="現在進行中の依頼："
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShowName" />

    <Button
        android:id="@+id/buttonToRequest"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="134dp"
        android:text="新しく依頼する"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShowRequest" />

    <Button
        android:id="@+id/buttonToChangeRQ"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="134dp"
        android:text="過去の依頼の変更"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToRequest" />

    <Button
        android:id="@+id/buttonToChangeDP"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="134dp"
        android:text="発送地点の変更"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToChangeRQ" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="144dp"
        android:layout_height="60dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="134dp"
        android:text="ログアウト"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToChangeDP" />

    <TextView
        android:id="@+id/tvShowName"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="53dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>